<!-- DESKTOP NAVBAR -->
<nav>

  <div class="navbar navbar-expand-sm navbar-light navbar-enferm">
    <a class="navbar-brand" href="/">
      <% if current_page?(root_path) %>
        <strong><span style="color: #1D1E33">Enferm</span></strong><span style="color: #8B959E">.</span>
      <% end %>
    </a>

    <div class="form-inline">

      <%= link_to feed_path do %>
        <i class="fas fa-envelope inactive-gray"></i>
      <% end %>
      <%= link_to feed_path do %>
        <i class="fas fa-bell ml-3 inactive-gray"></i>
      <% end %>

      <ul class="navbar-nav mr-auto desktop">
        <li class="nav-item mx-2">
        </li>
        <% if !user_signed_in? %>
            <li class="nav-item mx-2">
              <%= link_to "Login", new_user_session_path, class: "btn btn-ghost" %>
            </li>
        <% else %>
          <li class="dropdown bl-orange">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag avatar_for(current_user), class: "avatar" %>
            </a>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <li class="nav-item">
                <li><%= link_to "Saved", feed_path, class: "dropdown-item" %></li>
              </li>
              <li class="nav-item">
                <li><%= link_to "Shifts", feed_path, class: "dropdown-item" %></li>
              </li>
              <li class="nav-item">
                <li><%= link_to "Inbox", feed_path, class: "dropdown-item" %></li>
              </li>

              <li class="dropdown-divider"></li>

              <li><%= link_to "My Account", feed_path, class: "dropdown-item" %></li>

              <li class="dropdown-divider"></li>
              <% if current_user.admin == true %>
                <li><%= link_to "Admin dashboard", feed_path, class: "dropdown-item" %>
                </li>
              <% end %>
              <li><%= link_to "Help & FAQ", feed_path, class: "dropdown-item" %></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</nav>

<!-- MOBILE NAVBAR -->

<nav>
  <!-- Links -->
  <div class="mobile-btm-navbar">
    <a href="<%= root_path %>" class="btm-nav-btn <%= current_page?(root_path) ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-explore'%>Feed</a>
    <% if !user_signed_in? %>
      <a href="<%= new_user_registration_path %>" class="btm-nav-btn <%= current_page?(new_user_registration_path) ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-signup'%>Sign up</a>
      <a href="<%= new_user_session_path %>" class="btm-nav-btn <%= current_page?(new_user_session_path) ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-user'%>Login</a>
    <% else %>
      <a href="<%= root_path %>" class="btm-nav-btn <%= root_path ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-saved'%>Shifts</a>
      <a href="<%= root_path %>" class="btm-nav-btn <%= root_path ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-trips'%>Timesheet</a>
      <a href="<%= root_path %>" class="btm-nav-btn <%= root_path ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-inbox'%>Inbox</a>
      <a href="<%= root_path %>" class="btm-nav-btn <%= root_path ? "active-blue" : "inactive-gray" %>"><%= svg 'icon-user'%>Account</a>
    <% end %>
  </div>
</nav>
