<!-- MOBIL TOP NAVBAR -->

<nav class="mobile">
  <div class="form-inline d-flex justify-content-between pl-3 pr-3">
    <% if user_signed_in? %>
      <div class="mt-3">
        <%= link_to account_path do %>
          <%= image_tag avatar_for(@user), class: 'avatar' %>
        <% end %>
      </div>
      <div>
        <%= link_to conversations_path(current_user) do %>
          <i class="fas fa-envelope inactive-gray"></i>
        <% end %>
        <%= link_to feed_path do %>
          <i class="fas fa-bell ml-3 inactive-gray"></i>
        <% end %>
      </div>
    <% end %>

  </div>
</nav>



