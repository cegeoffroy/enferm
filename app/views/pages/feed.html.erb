<div class="container">
  <div class="row d-flex justify-content-center p-3">
    <div class="col-xs-12 w-100">

      <br>
      <nav>
        <div class="nav nav-pills nav-fill pill-orange" id="nav-tab" role="tablist">
          <a class="nav-item nav-link orange active" id="nav-account-tab" data-toggle="tab" href="#nav-account" role="tab" aria-controls="nav-account" aria-selected="true">Account</a>
          <a class="nav-item nav-link orange" id="nav-Jobs-tab" data-toggle="tab" href="#nav-Jobs" role="tab" aria-controls="nav-Jobs" aria-selected="false">Jobs</a>
          <a class="nav-item nav-link orange" id="nav-past-tab" data-toggle="tab" href="#nav-past" role="tab" aria-controls="nav-past" aria-selected="false">News</a>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-account" role="tabpanel" aria-labelledby="nav-account-tab">
          <br>

          <!-- Account status -->
          <div class="wall-card">
            <!-- Balance -->
            <div class="d-flex justify-content-between">
              <p>Account balance</p>
              <p class="blue"><strong>£1,240.36</strong></p>
            </div>
            <!-- Account actions -->
            <div class="list-actions">
              <a href="/" class="badge badge-pill badge-light">Get paid</a>
              <a href="/" class="badge badge-pill badge-light">Add money</a>
            </div>
            <br>
            <!-- Transactions -->
            <div class="d-flex justify-content-between">
              <h3>Transactions</h3>
              <a href="/">See all</a>
            </div>
            <div class="transaction-show">
              <div><i class="fas fa-hospital green"></i></div>
              <div class="transaction-content">
                <p class="blue"><strong>London NHS Trust</strong></p>
                <p><small>14th January</small></p>
              </div>
              <div class="transaction-amount">
                <p class="green">+£250</p>
              </div>
            </div>

            <div class="transaction-show">
              <div><i class="fas fa-wallet"></i></div>
              <div class="transaction-content">
                <p class="blue"><strong>Withdraw</strong></p>
                <p><small>12th January</small></p>
              </div>
              <div class="transaction-amount">
                <p class="red">+£250</p>
              </div>
            </div>

          </div>
          <br>
          <!-- Suggestions -->
          <p>Suggested for you</p>
          <br>
          <div class="card-line">
            <div class="small-card" style="background-color: #B31423">
              <p>x</p>
              <p>Refer friends and earn £5</p>
            </div>
          </div>


        </div>

        <div class="tab-pane fade" id="nav-past" role="tabpanel" aria-labelledby="nav-past-tab">
          <br>
        </div>

        <div class="tab-pane fade" id="nav-Jobs" role="tabpanel" aria-labelledby="nav-Jobs-tab">
          <br>
          <!-- Job card -->
          <div class="wall-card">
            <h3 class="blue">Swansea Hospital</h3>
            <h4>ICU Nurse band 5</h4>
            <h1>£25/Hour</h1>
            <hr class="blue">
            <p><strong>Location:</strong> Swansea bay, Wales</p>
            <p><strong>Duration:</strong>12 Hours</p>
            <div class="mt-4">
              <%= link_to "Apply", root_path, class: "btn btn-blue" %>
              <%= link_to "More info", root_path, class: "btn btn-ghost" %>
            </div>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>
