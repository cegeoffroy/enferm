<div class="container mt-4">

  <div class="row">

    <div class="col-md-5 desktop">
      <div class="left-signup">
        <h1>Welcome back.</h1>
        <p class="mt-5">The first app supporting healthcare people and the NHS</p>
      </div>
    </div>

    <div class="col-md-5 pad-0">
      <div class="right-signup">

        <h1 class="text-center">Log In</h1>
        <br>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-signup" %>
          </div>
        <% end %>
        <p>Password forgotten ? Just click <%= link_to 'here', new_user_password_path %> </p>
      </div>
    </div>
  </div>
</div>

