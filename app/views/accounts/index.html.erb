<div class="container">
  <div class="row d-flex justify-content-center p-3">
    <div class="col-xs-12 w-100">
      <div class="d-flex justify-content-between">
        <h3><strong>Dashboard<span style="color: #E67E22">.</span></strong></h3>
        <%= link_to @user do %>
          <i class="fas fa-pen"></i>
        <% end %>
      </div>
      <br>
      <div class="wall-card text-center">
        <%= image_tag avatar_for(@user), class: 'avatar' %>
        <h3 class="mt-3"><%= @user.first_name %> <i class="fas fa-user-check orange ml-2"></i></h3>
        <p class="mt-3"><%= @user.email %></p>
      </div>
      <br>

      <p>General</p>
      <div class="container">
          <div class="card-grid">

            <div class="card-setting myBox">
              <%= link_to root_path do %>
                <div class="d-flex flex-row align-items-center">
                  <%= svg "icon-dashboard" %>
                  <div class="ml-4">
                    <p class="blue"><strong>Candidate Settings</strong><br>
                    Manage your payroll, rates and availability</p>
                  </div>
                  <i class="fas fa-chevron-right"></i>
                </div>
              <% end %>
            </div>

            <div class="card-setting myBox">
              <%= link_to root_path do %>
                <div class="d-flex flex-row align-items-center justify-content-between">
                  <%= svg "icon-notification" %>
                  <div class="ml-4">
                    <p class="blue"><strong>Notifications</strong><br>
                    Change your notification settings</p>
                  </div>
                  <i class="fas fa-chevron-right"></i>
                </div>
              <% end %>
            </div>

            <div class="card-setting myBox">
              <%= link_to root_path do %>
                <div class="d-flex flex-row align-items-center justify-content-between justify-content-between">
                  <%= svg "icon-notification" %>
                  <div class="ml-4">
                    <p class="blue"><strong>Privacy</strong><br>
                    Update your password</p>
                  </div>
                  <i class="fas fa-chevron-right"></i>
                </div>
              <% end %>
            </div>

            <div class="card-setting myBox">
              <%= link_to root_path do %>
                <div class="d-flex flex-row align-items-center">
                  <%= svg "icon-notification" %>
                  <div class="ml-4">
                    <p class="blue"><strong>Referrals</strong><br>
                    Invite your friends, earn money</p>
                    <span class="badge badge-pill badge-primary">Coming soon</span>
                  </div>
                  <i class="fas fa-chevron-right"></i>
                </div>
              <% end %>
            </div>

          </div>
      </div>
      <br>

      <div class="container">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-ghost" %>
      </div>


      <br>
      <br>
      <br>

    </div>
  </div>
</div>

<script>
  $(".myBox").click(function() {
  window.location = $(this).find("a").attr("href");
  return false;
});
</script>
